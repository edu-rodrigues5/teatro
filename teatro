    <script lang = "JavaScript">
        var f,l,c,pre,i,i2,l2,c2, a= 0;
        f = new Array(15);
        for(i=0; i<f.length; ++i)
        {
            f[i] = new Array(40);
        }

       for(i=0; i < 15; ++i)
       {
        
            for(i2=0; i2 < 40; ++i2)
            {
                f[i][i2] = i2
            }
       }

       function troca(l,c ){
        if(a==0)
        {
        l2 =l;
        c2 = c;
        document.getElementById(l + "-" + c).src = "emopol.png";
        document.getElementById("cortina").src = "aberto.png";
        a++;
        }
        else
        {
            document.getElementById(l2 + "-" + c2).src = "poltronaroxa.png";
            document.getElementById(l + "-" + c).src = "emopol.png";
            l2 =l;
            c2 = c;
        }

      }

     

      function pol(l ,c ){
        troca(l, c);
       pre = 0; 
        if(l <= 4)
        {
           pre = 50;
        }

         if((l >= 5) && (l <= 9))
        {
           pre = 40;
        }

        if((l >= 10) && (l <= 14))
        {
           pre = 30;
        }

        if((c >= 10) && (l <= 30))
        {
           pre = pre + pre/10;
        }

        document.getElementById("display").value = "valor do ingresso: R$"+pre+",00";

      }

    </script>
