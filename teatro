    document.write("</td></tr></table>");

    document.write("<table border='1'><tr><td>");
    document.write("<input type = 'txt' id = 'display' value = 'valor do ingresso: ' readonly >");
    document.write("</td></tr></table>");

    
    document.write("<table align = 'center'>");
        for(l=0; l < 15; ++l)
            {
                document.write("<tr>");
                    for(c=0;  c< 40; ++c)
                    {
                        document.write( "<td><img width='30' height='30' src='poltronaroxa.png' id='"+ l + "-" + c+ "' onclick='pol(" + l + "," + c + ")'></td>");
                       
                    }
                    document.write("<tr>");
            }
    document.write("</table>");



    </script>

   
